<div class="wrapper">
  <div class="banner-index">
    <h1><%= @list.name %></div>
  </div>

  <div class="list-index-content">
    <% @list.movies.each do |movie| %>
      <div class="list-card-index">
        <%= image_tag 'list-image', class: 'image-list-cover', alt: "image cover for list" %>
        <div class="list-card-content">
          <p><%= movie.title %></p>
          <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
          <%= link_to 'Delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?", status: :see_other}, class: 'btn btn-danger btn-sm' %>
        </div>
      </div>
    <% end %>

  </div>

  <div class="show-navigate">
    <%= link_to "Home Page", lists_path, class: 'btn btn-success' %>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: 'btn btn-primary' %>
  </div>
</div>
